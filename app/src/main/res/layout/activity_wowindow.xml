<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/bt_return"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/left"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/bt_return"
        android:gravity="center"
        android:text="我"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="18sp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_avatar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_2"
        android:layout_marginTop="26dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deng2"
        app:riv_border_color="#D8D1D1"
        app:riv_border_width="2dp"
        app:riv_corner_radius="35dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/riv_avatar"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="旅行眼镜"
        android:textColor="#FFB3ADAD"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/riv_avatar"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="昵称"
        android:textColor="#FFB3ADAD"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_tomodifyinformation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/riv_avatar"
        android:layout_alignRight="@+id/tv_nickname"
        android:layout_marginTop="70dp"
        android:background="@drawable/right" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tv_3"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/tv_4"
        android:text="性别"
        android:textSize="18sp"
        android:textColor="#FFB3ADAD"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/spinner_equment_name"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/tv_3"
        ></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tv_5"
        android:layout_below="@+id/tv_3"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/tv_6"
        android:text="帮助"
        android:textSize="18sp"
        android:textColor="#FFB3ADAD"
        android:layout_below="@id/tv_3"
        android:layout_marginTop="5dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_3"
        android:layout_alignRight="@+id/tv_5"
        android:layout_marginTop="25dp"
        android:background="@drawable/right"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tv_7"
        android:layout_below="@+id/tv_5"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="108dp"
        android:layout_height="60dp"
        android:id="@+id/tv_8"
        android:text="登录与注册"
        android:textSize="18sp"
        android:textColor="#FFB3ADAD"
        android:layout_below="@id/tv_5"
        android:layout_marginTop="5dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/bt_tologin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_5"
        android:layout_alignRight="@+id/tv_7"
        android:layout_marginTop="25dp"
        android:background="@drawable/right"
        />
</RelativeLayout>
