<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <EditText
     android:layout_width="300dp"
     android:layout_height="30dp"
      android:layout_marginTop="3dp"
      android:layout_centerHorizontal="true"
     android:background="@drawable/bg_btn7"
     android:id="@+id/et_search"/>
  <Button
     android:layout_width="40dp"
     android:layout_height="40dp"
     android:layout_marginLeft="35dp"
      android:layout_marginTop="3dp"
     android:background="@drawable/search"
     />

 <Button
     android:id="@+id/bt_camera"
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:layout_below="@+id/et_search"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="10dp"
     android:background="@drawable/bg_btn6"/>
<Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_below="@+id/et_search"
    android:layout_marginTop="55dp"
    android:layout_marginLeft="45dp"
    android:background="@drawable/camera"/>

 <Button
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:id="@+id/bt_wifi"
     android:layout_below="@+id/et_search"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="145dp"
     android:background="@drawable/bg_btn6"/>
 <Button
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_below="@+id/et_search"
     android:layout_marginTop="55dp"
     android:layout_marginLeft="180dp"
     android:background="@drawable/wifi"
     />

 <Button
     android:id="@+id/bt_bluetooth"
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:layout_below="@+id/et_search"
     android:layout_marginTop="20dp"
     android:layout_toRightOf="@+id/bt_wifi"
     android:layout_marginLeft="15dp"
     android:background="@drawable/bg_btn6"/>
 <Button
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_below="@+id/et_search"
     android:layout_marginTop="55dp"
     android:layout_toRightOf="@+id/bt_wifi"
     android:layout_marginLeft="50dp"
     android:background="@drawable/bluetooth"/>


  <Button
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="#C5B9B9" />
   <Button
       android:id="@+id/btn_1"
       android:layout_width="60dp"
       android:layout_height="55dp"
       android:layout_alignParentBottom="true"
       android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/bt_main"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_btn1"
        android:text="首页"
        android:textAllCaps="false"
        android:textColor="#A18F8F"
        android:textSize="18sp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignTop="@+id/btn_1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/up"/>


     <Button
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:id="@+id/bt_share"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:background="@drawable/plus_sign"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:id="@+id/me"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/bt_person"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/person"
        android:layout_alignTop="@+id/me"
        android:layout_alignLeft="@+id/me"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/btn_2"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_btn1"
        android:gravity="center"
        android:text="我"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#A18F8F"/>


</RelativeLayout>